.list-wrapper {
  width: 100%;
}

/* 横着的分割View样式 */
/*分割线样式*/
.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.list-item {
  width: 100%;
  height: 120rpx;
}

.list-item_active {
  background-color: #E0E3DA;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
}
.item-text {
  position: fixed;
  left: 120rpx;
  color: #707070;
  font-size: 28rpx;
}
.item-array {
  position: fixed;
  right: 50rpx;
  font-size: 28rpx;
}

.item-image {
  position: fixed;
  left: 50rpx;
  width: 50rpx;
  height: 50rpx;
}

/***用户登陆头像***/
.user {
  display: flex;
  flex-direction: row;
  align-items: left;
  height: 150rpx;
}
.user-avatar{
  position: fixed;
  left: 40rpx;
  width: 150rpx;
  height: 150rpx;
}
.usermsg {
  display: flex;
  position: fixed;
  top: 20rpx;
  flex-direction: column;
  left: 190rpx;
  height: 150rpx;
}

.usermsg-text{
  position: fixed;
  left: 200rpx;
  font-size: 28rpx;
  color: #707070;
}

.usermsg-childname{
  position: fixed;
  top: 80rpx;
  left: 200rpx;
  font-size: 28rpx;
  color: #707070;
}