<view class='container'>
  <include src="../../toast_foot.wxml"/>
  <view class='header'>
    <text>教师注册页面</text>
  </view>
  <form bindsubmit="register">
    <view class='section'>
      <text>手机号码：</text>
      <input type='number' placeholder='请输入手机号码' name="username"/>
    </view>
    <view class='section'>
      <text>个人密码:</text>
      <input password='true' placeholder='请输入密码' name="password"/>
    </view>
     <view class='section'>
      <text>再次输入密码:</text>
      <input password='true' placeholder='请输入密码' name="password1"/>
    </view>
    <view class='section'>
      <text>教师名称:</text>
      <input placeholder='请输入教师名称' name="teahcer_name"/>
    </view>
    <view class='section'>
      <text>邀请码:</text>
      <input type='number' placeholder='请输入成为教师邀请码' name="invite_number"/>
    </view>
    <view class='button'>
      <button type='primary' form-type='submit'>注册</button>
    </view>
  </form>
</view>